<Page x:Class="FlashCards.Pages.EditingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlashCards.Pages" xmlns:uielements="clr-namespace:FlashCards.UIElements"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditingPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ColourDictionary.xaml"/>
                <ResourceDictionary Source="/Resources/CustomButtonTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="3" Grid.ColumnSpan="2"
                Background="{StaticResource LighterBackgroundBrush}"
                Margin="40" CornerRadius="20"
                BorderBrush="White" BorderThickness="2">
            <StackPanel>
                
            </StackPanel>
        </Border>

        <uielements:EditableFlashCard
            Grid.Column="2" Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Margin="30">
            
        </uielements:EditableFlashCard>


        <Button x:Name="Mitchells"
                Grid.Column="2" Grid.ColumnSpan="2"
                Grid.Row="3"
                Style="{StaticResource AnimatedButton}"
                Content="BABABOOY"
                Click="Mitchells_Click">
            
        </Button>

        
    </Grid>
</Page>
