<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Main Window Colours-->
    <Color x:Key="MainBackground">#232337</Color>
    <SolidColorBrush x:Key="MainBackgroundBrush" Color="{StaticResource MainBackground}"/>

    <Color x:Key="LighterMainBackground">#303047</Color>
    <SolidColorBrush x:Key="LighterBackgroundBrush" Color="{StaticResource LighterMainBackground}"/>

    <Color x:Key="AnswerColor">#603070</Color>
    <SolidColorBrush x:Key="AnswerBrush" Color="{StaticResource AnswerColor}"/>

    <Color x:Key="LighterAnswerColor">#803090</Color>
    <SolidColorBrush x:Key="LighterAnswerBrush" Color="{StaticResource LighterAnswerColor}"/>


    <!-- Button Colours and Brushes-->
    <Color x:Key="MainButtonBackground">#303040</Color>
    <LinearGradientBrush x:Key="MainButtonBrush">
        <GradientStop Color="{StaticResource MainButtonBackground}"/>
    </LinearGradientBrush>

    <Color x:Key="LeadingGradient">#505060</Color>


    <LinearGradientBrush x:Key="GradientBrush">
        <GradientStop x:Name="GradientStop1" Color="{StaticResource MainButtonBackground}" Offset="0.0"/>
        <GradientStop x:Name="GradientStop2"  Color="{StaticResource LeadingGradient}" Offset="3.0"/>
    </LinearGradientBrush>
    
</ResourceDictionary>